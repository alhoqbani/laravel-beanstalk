Resources:
  AWSEBAutoScalingGroup:
    Metadata:
      AWS::CloudFormation::Authentication:
        S3Auth:
          type: "s3"
          buckets: ["sites-env"]
          roleName: "aws-elasticbeanstalk-ec2-role"

files:
  "/tmp/.env" :
    mode: "000644"
    owner: root
    group: root
    authentication: "S3Auth"
    source: https://s3-us-west-1.amazonaws.com/sites-env/laravel-beanstalk/.env
